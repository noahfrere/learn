package jayJay;
import java.util.Scanner;

public class SquareRoot {

	static Scanner sc = new Scanner(System.in);
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		double x = 0;
		double x1, x2, x3;
		double S = 0;
		
		System.out.print("Wilkommen to the Square Root function per Newton. Please enter a number "
				+ "that you want the square root of.");
		S = sc.nextDouble();
		System.out.print("Now enter your best guess for the answer.");
		x = sc.nextDouble();
		x1 = x - (((x*x)-S) / (2*x));
		x2 = x1 - (((x1*x1)-S) / (2*x1));
		x3 = x2 - (((x2*x2)-S) / (2*x2));
		
		System.out.print("The next 3 numbers wil be the results up to the third iteration\n");
		System.out.println(x1);
		System.out.println(x2);
		System.out.println(x3);
		System.out.print("The actual answer is ");
		System.out.println(Math.sqrt(S));
	}

}
